<UserControl x:Class="FirstProject.NewTaskPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="400" Width="450"
        MinHeight="300" MinWidth="400"        
   >

    <!--removed title because the the usercontrol they don't accept title-->



    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0"
           Content="My Task Manager"
           FontSize="22"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           Margin="10"/>

        <!-- Task List -->
        <ScrollViewer Grid.Row="1"
                  Margin="20,10"
                  VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

            <StackPanel x:Name="TaskPanel">

                <!-- Task 1 -->
                <Border BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    CornerRadius="5"
                    Background="White"
                    Padding="10"
                    Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Task 1:" Width="60"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                        <TextBox Grid.Column="1" x:Name="txtTask1"
                             MinHeight="30" Margin="5,0"
                             VerticalContentAlignment="Center"
                             Padding="5" Foreground="Gray"
                             GotFocus="txtTask1_GotFocus"
                             LostFocus="txtTask1_LostFocus"
                             Tag="Enter your task"/>

                        <CheckBox Grid.Column="2" x:Name="chkTask1"
                              Content="Done" Margin="10,0"
                              VerticalAlignment="Center"/>

                        <Button Grid.Column="3" Content="✕"
                            Width="30" Height="30"
                            FontSize="16" FontWeight="Bold"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnDeleteTask1_Click"/>
                    </Grid>
                </Border>

                <!-- Task 2 -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                    CornerRadius="5" Background="White"
                    Padding="10" Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Task 2:" Width="60"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                        <TextBox Grid.Column="1" x:Name="txtTask2"
                             MinHeight="30" Margin="5,0"
                             VerticalContentAlignment="Center"
                             Padding="5" Foreground="Gray"
                             GotFocus="txtTask1_GotFocus"
                             LostFocus="txtTask1_LostFocus"
                             Tag="Enter your task"/>

                        <CheckBox Grid.Column="2" x:Name="chkTask2"
                              Content="Done" Margin="10,0"
                              VerticalAlignment="Center"/>

                        <Button Grid.Column="3" Content="✕"
                            Width="30" Height="30"
                            FontSize="16" FontWeight="Bold"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnDeleteTask2_Click"/>
                    </Grid>
                </Border>

                <!-- Task 3 -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                    CornerRadius="5" Background="White"
                    Padding="10" Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Task 3:" Width="60"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                        <TextBox Grid.Column="1" x:Name="txtTask3"
                             MinHeight="30" Margin="5,0"
                             VerticalContentAlignment="Center"
                             Padding="5" Foreground="Gray"
                             GotFocus="txtTask1_GotFocus"
                             LostFocus="txtTask1_LostFocus"
                             Tag="Enter your task"/>

                        <CheckBox Grid.Column="2" x:Name="chkTask3"
                              Content="Done" Margin="10,0"
                              VerticalAlignment="Center"/>

                        <Button Grid.Column="3" Content="✕"
                            Width="30" Height="30"
                            FontSize="16" FontWeight="Bold"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnDeleteTask3_Click"/>
                    </Grid>
                </Border>

                <!-- Task 4 -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1"
                    CornerRadius="5" Background="White"
                    Padding="10" Margin="0,5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="Task 4:" Width="60"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                        <TextBox Grid.Column="1" x:Name="txtTask4"
                             MinHeight="30" Margin="5,0"
                             VerticalContentAlignment="Center"
                             Padding="5" Foreground="Gray"
                             GotFocus="txtTask1_GotFocus"
                             LostFocus="txtTask1_LostFocus"
                             Tag="Enter your task"/>

                        <CheckBox Grid.Column="2" x:Name="chkTask4"
                              Content="Done" Margin="10,0"
                              VerticalAlignment="Center"/>

                        <Button Grid.Column="3" Content="✕"
                            Width="30" Height="30"
                            FontSize="16" FontWeight="Bold"
                            Background="#F44336"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnDeleteTask4_Click"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <Grid Grid.Row="2" Margin="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Add Task"
                Background="#4CAF50" Foreground="White"
                MinHeight="40" Click="BtnAddTask_Click"/>

            <Button Grid.Column="2" Content="Save All"
                Background="#2196F3" Foreground="White"
                MinHeight="40" Click="BtnSaveAll_Click"/>

            <Button Grid.Column="4" Content="Clear All"
                Background="#FF9800" Foreground="White"
                MinHeight="40" Click="BtnClearAll_Click"/>
        </Grid>
    </Grid>




</UserControl>
                       